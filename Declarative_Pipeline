pipeline{
    agent any
    
    
    stages{
        stage("GitCheckOut"){
            steps{
                
                git branch: 'main', credentialsId: 'git', url: 'https://github.com/ashisharyaa/today.git'
                
            }
        }
        
        stage("Maven Build"){
            steps{
                
                sh "mvn clean package"
                sh "mv target/*.war target/myweb.war"
                
            }
        }
        
        stage("Deploy into tomcat"){
            steps{
                
               sshagent(['tomcat9']) {
                 sh """
                    scp -o StrictHostKeyChecking=no target/myweb.war ec2-user@172.31.88.163:/opt/tomcat9/webapps/
                    
                    ssh  root@172.31.88.163 /opt/tomcat9/bin/shutdown.sh
                    
                    ssh  root@172.31.88.163 /opt/tomcat9/bin/startup.sh
                    
                    """
                 }
                
            }
        }
        
    }
    
    
}
